<?xml version="1.0" encoding="utf-8"?>
<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exposuresoftware.xsandos"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:configChanges="keyboardHidden|orientation" >
        <activity
            android:name="com.exposuresoftware.xsandos.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exposuresoftware.xsandos.Game"
            android:label="@string/label_activity_game" >
            
        </activity>
        <activity
            android:name="com.exposuresoftware.xsandos.SettingsActivity"
            android:label="@string/label_activity_settings" >
            
        </activity>
    </application>

</manifest>